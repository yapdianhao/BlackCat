{   
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "lib": ["dom", "esnext"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "jest",
            "@types/jest"
        ],
        "typeRoots": [
            "/node_modules/@types",
            "custom.d.ts"
        ],
    }
}